<configuration debug="true">
	<property resource="application.properties" />
	<statusListener class="ch.qos.logback.core.status.OnConsoleStatusListener" />


	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<target>System.out</target>
		<encoder>
			<pattern>| [%-5level] [%date{ISO8601}] [%logger] [%thread] [%X{akkaSource}] - %msg %rootException %n</pattern>
		</encoder>
	</appender>

	<appender name="ROLLING" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>server.log</file>
		<!-- only keep 3 -->
		<rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
			<fileNamePattern>server.%i.log</fileNamePattern>
			<minIndex>1</minIndex>
			<maxIndex>3</maxIndex>
		</rollingPolicy>
		<triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
			<maxFileSize>1MB</maxFileSize>
		</triggeringPolicy>
		<encoder>
			<pattern>| [%-5level] [%date{ISO8601}] [%logger] [%thread] [%X{akkaSource}] - %msg %rootException %n</pattern>
		</encoder>
	</appender>

	<appender name="DB" class="com.ted.common.log.slf4j.appender.Slf4jDBAppender">
		<connectionSource class="ch.qos.logback.core.db.DataSourceConnectionSource">
			<dataSource class="com.mchange.v2.c3p0.ComboPooledDataSource">
				<driverClass>${jdbc.driver}</driverClass>
				<jdbcUrl>${jdbc.url}</jdbcUrl>
				<user>${jdbc.username}</user>
				<password>${jdbc.password}</password>
			</dataSource>
		</connectionSource>
		<sqlDialect class="ch.qos.logback.core.db.dialect.MySQLDialect" />
	</appender>
    

	<logger name="net.sf.log4jdbc">
		<level value="DEBUG"/>
		<appender-ref ref="STDOUT"/>
		<appender-ref ref="ROLLING"/>
	</logger>
    
	<logger name="jdbc.resultset">
		<level value="INFO"/>
		<appender-ref ref="STDOUT"/>
	</logger>
    
	<logger name="jdbc.audit">
		<level value="INFO"/>
		<appender-ref ref="STDOUT"/>
	</logger>
    
	<logger name="jdbc.resultsettable">
		<level value="INFO"/>
		<appender-ref ref="STDOUT"/>
	</logger>
    
	<logger name="org.springframework.web">
		<level value="INFO"/>
		<appender-ref ref="STDOUT"/>
		<appender-ref ref="DB"/>
	</logger>
    
	<logger name="com.ckfinder">
		<level value="INFO"/>
		<appender-ref ref="STDOUT"/>
	</logger>
    
	<logger name="org.apache.shiro">
		<level value="INFO"/>
		<appender-ref ref="STDOUT"/>
		<appender-ref ref="ROLLING"/>
	</logger>
    
	<root level="WARN">
		<appender-ref ref="STDOUT"/>
		<appender-ref ref="ROLLING"/>
		<appender-ref ref="DB"/>
	</root>

</configuration>